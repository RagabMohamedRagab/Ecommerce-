    <!-- Section -->
    @if (Rams != null)
    {
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">

                    <div class="col-md-12">
                        <div class="section-title text-center">
                            <h3 class="title">Related Products</h3>
                        </div>
                    </div>
                    @foreach (var item in Rams)
                    {
                        <div class="col-md-3 col-xs-6">
                            <div class="product">
                                <div class="product-img">
                                    @foreach (var img in item.Image)
                                    {
                                        <img src="~/Images/@img" alt="">
                                    }
                                    <div class="product-label">
                                        <span class="sale">-30%</span>
                                    </div>
                                </div>
                                <div class="product-body">
                                    <h3 class="product-name text-truncate" data-toggle="tooltip" title="@item.RamName"><a href="#">@item.RamName</a></h3>
                                    <h4 class="product-price">@item.RamPrice LE</h4>
                                    @if (item.RamQuantity == 0)
                                    {
                                        <h3 class="product-price" style="font-size: 14px;">Out of Stock </h3>
                                    }
                                    else
                                    {
                                        <h3 class="product-price" style="font-size: 14px;color:green">In Stock </h3>
                                    }
                                    <div class="product-rating">
                                        @for (var i = 1; i < Decimal.Round(item.RamRate, 1); i++)
                                        {
                                            <i class="fa fa-star" style="color: #D10024"></i>
                                        }
                                        @for (var i = Decimal.Round(item.RamRate, 1); i <= 5; i++)
                                        {
                                            @if (Decimal.Round(item.RamRate, 1) != 0)
                                            {
                                                @if (Math.Floor((i - Math.Floor(i)) * 10) == 0 && i == Decimal.Round(item.RamRate, 1))
                                                {
                                                    <i class="fa fa-star" style="color: #D10024"></i>
                                                }
                                                else if (Math.Floor((i - Math.Floor(i)) * 10) >= 5 && i == Decimal.Round(item.RamRate, 1))
                                                {
                                                    <i class="fa fa-star-half-o" style="color: #D10024"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-star-o" style="color: #D10024"></i>
                                                }
                                            }
                                            else
                                            {
                                                if (i < 5)
                                                {
                                                    <i class="fa fa-star-o" style="color: #D10024"></i>
                                                }
                                            }
                                        }
                                    </div>
                                    <div class="product-btns">
                                        @if (item.WishList == true)
                                        {
                                            <button onclick="AddOrDeleteWL('@item.RamCode')" class="add-to-wishlist"><i id="@item.RamCode" style="color: #D10024" class="fa fa-heart"></i><span class="tooltipp">Remove from wishlist</span></button>
                                        }
                                        else
                                        {
                                            <button onclick="AddOrDeleteWL('@item.RamCode')" class="add-to-wishlist"><i id="@item.RamCode" class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                        }
                                        <button onclick="gotoDetails('@item.RamCode')" class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                                        @if (item.RamQuantity == 0)
                                        {
                                            <button style="background: white;cursor:auto" data-toggle="blog-tags" data-placement="top">
                                                <i class="fa fa-shopping-cart" style="color: #cdcdcd; "></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button onclick="AddToCart2({Code: '@item.RamCode',Quantity: 1})" data-toggle="blog-tags" data-placement="top" title="Add TO CART">
                                                <i class="fa fa-shopping-cart"></i><span class="tooltipp">add to Cart</span>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-md-12">
                        <div class="section-title" style="float:right">
                            <h4 class="title"><a href="/Home/RAM"><strong>show more</strong> <i class="fa fa-hand-o-right" aria-hidden="true"></i></a></h4>
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>

    }
    <!-- /Section -->

