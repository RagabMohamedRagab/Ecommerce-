@model BLL.ViewModel.RamVM
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{ var Rams = ViewBag.Ram;

    var Rate = Decimal.Round(Model.RamRate, 1);
    var rate5 = 0;
    var rate4 = 0;
    var rate3 = 0;
    var rate2 = 0;
    var rate1 = 0;
    if (Model.RateCount.Where(x => x.Rate != 0).Sum(x => x.Count) != 0)
    {
        rate5 = (Model.RateCount.Where(x => x.Rate == 5).Select(x => x.Count).FirstOrDefault()) * 100 / Model.RateCount.Where(x => x.Rate != 0).Sum(x => x.Count);
        rate4 = (Model.RateCount.Where(x => x.Rate == 4).Select(x => x.Count).FirstOrDefault()) * 100 / Model.RateCount.Where(x => x.Rate != 0).Sum(x => x.Count);
        rate3 = (Model.RateCount.Where(x => x.Rate == 3).Select(x => x.Count).FirstOrDefault()) * 100 / Model.RateCount.Where(x => x.Rate != 0).Sum(x => x.Count);
        rate2 = (Model.RateCount.Where(x => x.Rate == 2).Select(x => x.Count).FirstOrDefault()) * 100 / Model.RateCount.Where(x => x.Rate != 0).Sum(x => x.Count);
        rate1 = (Model.RateCount.Where(x => x.Rate == 1).Select(x => x.Count).FirstOrDefault()) * 100 / Model.RateCount.Where(x => x.Rate != 0).Sum(x => x.Count);
    }

}
