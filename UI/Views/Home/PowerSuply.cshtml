                                            {
                                                @if (Decimal.Round(ps.Psurate, 1) != 0)
                                                {
                                                    @if (Math.Floor((i - Math.Floor(i)) * 10) == 0 && i == Decimal.Round(ps.Psurate, 1))
                                                    {
                                                        <i class="fa fa-star" style="color: #D10024"></i>
                                                    }
