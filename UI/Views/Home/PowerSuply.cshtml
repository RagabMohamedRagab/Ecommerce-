                                            {
                                                <button onclick="AddOrDeleteWL('@ps.Psucode' ,'Add')" class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                            }
                                            <button onclick="gotoDetails('@ps.Psucode')" class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
