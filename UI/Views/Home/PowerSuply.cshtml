                                <option value="2">2</option>
                                <option value="5">5</option>
                            </select>
                        </label>
                    </div>
                </div>
                <!-- store products -->
                <section id="emptyPro">
                     <div id="PWS" class="row my-4">
                    @if (Model.Data.Count() > 0)
                    {
                        @foreach (PowerSupplyVM ps in Model.Data)
                        {
                            <div class="col-md-4" style="margin-bottom:6%">
                                <div class="product">
                                    <div class="product-img">
                                        <img src="~/Images/@ps.Image.FirstOrDefault()"  alt="@ps.Psuname">
                                    </div>
                                    <div class="product-body">
                                        <h3 class="product-name text-truncate"><a href="javascript:void(0)">@ps.Psuname</a></h3>
