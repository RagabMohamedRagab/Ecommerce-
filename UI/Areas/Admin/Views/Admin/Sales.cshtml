
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content" style="background: #f1f2f7;">
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Dashboard</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="/Admin/Admin/Index">Dashboard</a></li>
                                <li class="active"> Sales </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="animated fadeIn">
            <div class="row" style="display:flex;align-items:baseline">
                <div class="col-md-2" style=" font-size: 95%; margin-top: 5%;">
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" checked="checked" value="CAS" id="cas">
                        Case
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" checked="checked" value="V" id="V">
                        Graphics Card
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" checked="checked" value="HD" id="hd">
                        HDD
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" checked="checked" value="MO" id="mo">
                        Mother Board
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" checked="checked" value="PS" id="ps">
                        Poewr Supply
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" checked="checked" value="Pr" id="pr">
                        Processor
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" checked="checked" value="R" id="r">
                        RAM
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label><br />
                    <label class="switch switch-3d switch-primary mr-3">
                        <input type="checkbox" class="switch-input" checked="checked" value="SSD" id="ssd">
                        SSD
                        <span class="switch-label"></span> <span class="switch-handle"></span>
                    </label>

                </div>
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header" style="background: #337ab7;">
                            <strong class="card-title" style="color:#fff">Sales Table</strong>
                        </div>
                        <div class="card-body">
                            <table id="tblSales" class="table table-striped table-bordered" >
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->
</div>
<script src="~/js/jquery.min.js"></script>
<script>

    // All Tables
    $(document).ready(function () {
        var globalArr = ["CAS", "V", "HD", "MO", "PS", "Pr", "R", "SSD"];
        // Case
        $("#cas").click(function () {
            if (this.checked) {
                globalArr.push($(this).val());
            } else {
                for (var i = 0; i < globalArr.length; i++) {

                    if (globalArr[i] === $(this).val()) {
                        globalArr.splice(i, 1);

                    }
                }
            }

            GetSales(globalArr);
        });
        // Graphic Card
        $("#V").click(function () {
            if (this.checked) {
                globalArr.push($(this).val());
            } else {
                for (var i = 0; i < globalArr.length; i++) {

                    if (globalArr[i] === $(this).val()) {
                        globalArr.splice(i, 1);

                    }
                }
            }
            GetSales(globalArr);
        });
        // HDD
        $("#hd").click(function () {
            if (this.checked) {
                globalArr.push($(this).val());
            } else {
                for (var i = 0; i < globalArr.length; i++) {

                    if (globalArr[i] === $(this).val()) {
                        globalArr.splice(i, 1);

                    }
                }
            }
            GetSales(globalArr);
        });
        // Motherboard
        $("#mo").click(function () {
            if (this.checked) {
                globalArr.push($(this).val());
            } else {
                for (var i = 0; i < globalArr.length; i++) {

                    if (globalArr[i] === $(this).val()) {
                        globalArr.splice(i, 1);

                    }
                }
            }
            GetSales(globalArr);
        });
        // PowerSuply
        $("#ps").click(function () {
            if (this.checked) {
                globalArr.push($(this).val());
            } else {
                for (var i = 0; i < globalArr.length; i++) {

                    if (globalArr[i] === $(this).val()) {
                        globalArr.splice(i, 1);

                    }
                }
            }
            GetSales(globalArr);
        });
        // Processor
        $("#pr").click(function () {
            if (this.checked) {
                globalArr.push($(this).val());
            } else {
                for (var i = 0; i < globalArr.length; i++) {

                    if (globalArr[i] === $(this).val()) {
                        globalArr.splice(i, 1);

                    }
                }
            }
            GetSales(globalArr);
        });
        // RAM
        $("#r").click(function () {
            if (this.checked) {
                globalArr.push($(this).val());
            } else {
                for (var i = 0; i < globalArr.length; i++) {

                    if (globalArr[i] === $(this).val()) {
                        globalArr.splice(i, 1);

                    }
                }
            }
            GetSales(globalArr);
        });
        // ssd
        $("#ssd").click(function () {
            if (this.checked) {
                globalArr.push($(this).val());
            } else {
                for (var i = 0; i < globalArr.length; i++) {

                    if (globalArr[i] === $(this).val()) {
                        globalArr.splice(i, 1);

                    }
                }
            }
            GetSales(globalArr);
        });
        // GetAllSalesData
        function GetSales(arr) {
            $.ajax({
                type: "POST",
                url: "/Admin/Admin/SalesData?code=" + arr,
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    OnSuccess(data)
                }
            });
        }
        // Ajax
        $.ajax({
            type: "POST",
            url: "/Admin/Admin/SalesData?code=" + globalArr,
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                OnSuccess(data)
            },

        });

    });
    // DataTables
    function OnSuccess(response) {

        $("#tblSales").DataTable(
            {
                bLengthChange: true,
                lengthMenu: [[10, 20, 50], [10, 20, 50]],
                bFilter: true,
                bSort: true,
                bPaginate: true,
                stateSave: true,
                bDestroy: true,
                data: response,
                columns: [{ title: 'UserID', 'data': 'userID' }
                    , { title: 'Name', 'data': 'productCode' },
                { title: 'Quantity', 'data': 'productQuantity' },
                { title: 'Price', 'data': 'totalPrice' },
                { title: 'Address', 'data': 'address' },
                { title: 'Date', 'data': 'dateAndTime' }
                ]
            });
        $("#tblSales").css('width', '');
        $("#tblSales").closest('.col-sm-12').css('overflow-x', 'auto');
    };


</script>




